doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        title CoBit
        script(src='/javascripts/jquery/jquery-3.1.1.min.js')
        script(src='/javascripts/jquery-ui-1.12.1.custom/jquery-ui.min.js')
        script(type='text/javascript').
            var cobit_data = !{JSON.stringify(coBitData)}; var login_data = !{JSON.stringify(loginData)}; var comment_data = !{JSON.stringify(commentData)};
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/discussionStyle.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    body
        #topWrapper
            a(href='../../../' id='toHome')
                i(class='fa fa-code' style='color: lightgrey; font-size:50px; height:30px; float:left;' aria-hidden="true")
            a(href='../#{coBitData._id}' id='toOriginal')    
                #title #{coBitData.title}
            a(href='../../login' id='toLogin')
                button#loginButtonUser.topButton Login
            a(href='../../cobit/new' id='toNewCoBit')
                button#newCoBitButton.topButton + New CoBit
        #coBitFront
            iframe#coBitFrame(src="https://co-bit.herokuapp.com/cobit/#{coBitData._id}/debug")